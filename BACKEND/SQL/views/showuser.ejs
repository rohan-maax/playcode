<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Users</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

  <style>
    .user-div {
      background-color: rgb(59, 59, 59);
      border-radius: 20px;

    }

    table,
    th,
    td {
      border: 1px solid black;

    }

    table {
      border-radius: 20px;
    }

    th {
      background-color: aquamarine;
      text-align: center;
      font-size: 20px;

    }

    td {
      background-color: azure;
      text-align: center;
      border-radius: 5px;

    }

    .btn-td {
      border: none;
      padding: 5px;

    }

    h2 {

      font-size: 40px;
      background-color: bisque;

    }

    .add-new {
      position: fixed;
      top: 25%;
      left: 90%;
      padding: 1% 2% 1% 2%;


    }
  </style>
</head>

<body>
  <form method="GET" action="/user/new">
    <button class="btn add-new btn-outline-info">Add New</button>

  </form>
  <div class="user-div">
    <center>
      <h2>List Of All Users</h2>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>UserName</th>
          <th></th>
          <th></th>

        </tr>
        <% for(user of users) { %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.username %>
            </td>
            <td class="btn-td">
              <form method="get" action="/user/<%=user.id%>/edit">
                <button class="btn btn-outline-primary">Edit Username</button>

              </form>
            </td>
            <td class="btn-td">
              <form method="get" action="/user/<%=user.id%>/delete">
                <button class="btn btn-outline-danger">DELETE</button>

              </form>
            </td>
          </tr>
          <% } %>
      </table>
    </center>
  </div>
</body>

</html>